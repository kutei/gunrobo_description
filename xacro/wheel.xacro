<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="wheel" params="prefix parent r_size w_size *joint_origin *joint_axis">
        <xacro:property name="wheel_link" value="${prefix}_wheel" />
        <xacro:property name="wheel_joint" value="${wheel_link}_joint" />
        <xacro:property name="wheel_trans" value="${wheel_link}_trans" />
        <xacro:property name="wheel_motor" value="${wheel_link}_motor" />

        <joint name="${wheel_joint}" type="continuous">
            <parent link="${parent}" />
            <child link="${wheel_link}" />
            <xacro:insert_block name="joint_origin" />
            <xacro:insert_block name="joint_axis" />
            <limit velocity="12.0" effort="0.4" />
            <dynamics damping="0.1" />
        </joint>

        <link name="${wheel_link}">
            <visual>
                <geometry>
                    <cylinder radius="${r_size}" length="${w_size}"/>
                </geometry>
                <material name="red">
                    <color rgba="1.0 0.0 0.0 2.5"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="${r_size}" length="${w_size}"/>
                </geometry>
            </collision>
            <inertial>
                <xacro:property name="mass" value="0.1" />
                <xacro:property name="inertia_ixx" value="${mass*r_size*r_size/4 + mass*w_size*w_size/12}" />
                <xacro:property name="inertia_izz" value="${mass*r_size*r_size/2}" />
                <mass value="${mass}"/>
                <inertia ixx="${inertia_ixx}" ixy="0" ixz="0"
                    iyy="${inertia_ixx}" iyz="0"
                    izz="${inertia_izz}"/>
            </inertial>
        </link>

        <transmission name="${wheel_trans}" type="SimpleTransmission">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${wheel_motor}">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="${wheel_joint}">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
        </transmission>

        <gazebo reference="${wheel_link}">
            <material>Gazebo/Red</material>
            <mu1>0.05</mu1>
            <mu2>0.05</mu2>
        </gazebo>
    </xacro:macro>
</robot>
